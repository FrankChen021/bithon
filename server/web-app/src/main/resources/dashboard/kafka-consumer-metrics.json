{
  "name": "kafka-consumer-metrics",
  "title": "Kafka Consumer",
  "folder": "metrics",
  "filter": {
    "selectors": [
      {
        "type": "datasource",
        "name": "kafka-consumer-metrics",
        "fields": [
          "appName",
          "instanceName",
          "cluster",
          "topic",
          "partition",
          "groupId",
          "clientId"
        ]
      }
    ]
  },
  "charts": [
    {
      "title": "Consumed Records",
      "width": 4,
      "type": "line",
      "yAxis": [
        { "format": "rate" }
      ],
      "columns": [
        "consumedRecordsRate",
        { "name": "consumedRecords", "yAxis": 1}
      ],
      "query": {
        "type": "timeseries",
        "dataSource": "kafka-consumer-metrics",
        "fields": [
          "consumedRecordsRate",
          "consumedRecords"
        ]
      },
      "details": {
        "columns": ["cluster",
          "topic",
          "groupId",
          {"name": "count", "format": "compact_number" },
          {"name": "consumedRecordsRate","format": "rate"},
          {"name": "consumedRecords", "format": "compact_number"}
        ],
        "query": {
          "type": "groupBy",
          "dataSource": "kafka-consumer-metrics",
          "fields": [
            "cluster","topic","groupId","count","consumedRecordsRate","consumedRecords"
          ],
          "orderBy": {
            "name": "consumedRecordsRate",
            "order": "desc"
          },
          "limit": 15
        },
        "tracing": {
          "mappings": {
            "cluster": "tags.net.peer",
            "topic": "tags.messaging.kafka.topic",
            "groupId": "tags.messaging.kafka.consumer.group"
          },
          "filter": "name= 'kafka' AND kind = 'CONSUMER'"
        }
      }
    },
    {
      "title": "Consumed Bytes",
      "width": 4,
      "type": "line",
      "yAxis": [
        {
          "format": "byte_rate"
        },
        {
          "format": "binary_byte"
        }
      ],
      "columns": [
        "consumedBytesRate",
        {
          "name": "consumedBytes",
          "yAxis": 1
        }
      ],
      "query": {
        "type": "timeseries",
        "dataSource": "kafka-consumer-metrics",
        "fields": [
          "consumedBytesRate",
          "consumedBytes"
        ]
      }
    }
  ]
}