{
  "name": "application-overview",
  "folder": "metrics",
  "title": "Application Overview",
  "filter": {
    "selectors": [
      {
        "type": "datasource",
        "name": "jvm-metrics",
        "fields": [
          {"name": "appName", "width": 200, "allowClear":  false}
        ]
      }
    ]
  },
  "charts": [
    {
      "title": "Instance List",
      "width": 4,
      "type": "table",
      "columns": [
        {
          "name": "index",
          "title": "No.",
          "format": "index",
          "sortable": false,
          "width": 80,
          "align": "center"
        },
        {
          "name": "instanceName",
          "title": "instance",
          "format": "template",
          "template": "<a target='_blank' href='/web/metrics/jvm-metrics?appName={appName}&instanceName={instanceName}&interval=c:{interval}'>{instanceName}</a>"
        },
        {
          "name": "processCpuLoad",
          "format": "percentage"
        },
        "processors",
        {
          "name": "instanceStartTime",
          "title": "startTime",
          "format": "dateTime"
        },
        {
          "name": "instanceUpTime",
          "title": "upTime",
          "format": "timeDuration"
        },
        {
          "name": "heapUsed",
          "format": "percentage"
        },
        {
          "name": "heapMax",
          "format": "binary_byte"
        }
      ],
      "query": {
        "dataSource": "jvm-metrics",
        "type": "groupBy",
        "fields": [
          "appName",
          "instanceName",
          "processors",
          "instanceStartTime",
          "instanceUpTime",
          {
            "name": "heapUsed",
            "expression": "round(last(heapUsed) * 100.0/last(heapMax), 2)"
          },
          "heapMax",
          "processCpuLoad"
        ],
        "orderBy": {
          "name": "instanceUpTime",
          "order": "asc"
        },
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    },
    {
      "title": "Top 10 Incoming HTTP Requests",
      "width": 4,
      "type": "table",
      "columns": [
        {
          "name": "uri",
          "format": "template",
          "template": "<a target='_blank' href='/web/metrics/http-incoming-metrics/?appName={appName}&uri={uri}&interval=c:{interval}'>{uri}</a>"
        },
        "qps",
        {
          "name": "totalCount",
          "format": "compact_number"
        },
        {
          "name": "errorCount",
          "format": "compact_number"
        },
        {
          "name": "errorRate",
          "format": "percentage"
        },
        {
          "name": "avgResponseTime",
          "format": "nanosecond"
        }
      ],
      "query": {
        "dataSource": "http-incoming-metrics",
        "type": "groupBy",
        "fields": [
          "appName",
          "uri",
          "qps",
          "totalCount",
          "errorCount",
          {
            "name": "errorRate",
            "expression": "round(sum(errorCount)*100.0/sum(totalCount), 2)"
          },
          "avgResponseTime"
        ],
        "limit": "10",
        "orderBy": {
          "name": "totalCount",
          "order": "desc"
        },
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    },
    {
      "title": "Top 10 Outgoing HTTP Requests",
      "width": 4,
      "type": "table",
      "columns": [
        {
          "name": "path",
          "format": "template",
          "template": "<a target='_blank' href='/web/metrics/http-outgoing-metrics/?appName={appName}&path={path}&interval=c:{interval}'>{path}</a>"
        },
        "qps",
        {
          "name": "requestCount",
          "format": "compact_number",
          "title": "totalCount"
        },
        {
          "name": "errorCount",
          "format": "compact_number"
        },
        {
          "name": "errorRate",
          "format": "percentage"
        },
        {
          "name": "avgResponseTime",
          "format": "nanosecond"
        }
      ],
      "query": {
        "dataSource": "http-outgoing-metrics",
        "type": "groupBy",
        "fields": [
          "appName",
          "path",
          "qps",
          "requestCount",
          {
            "name": "errorCount",
            "expression": "sum(count4xx) + sum(count5xx)"
          },
          {
            "name": "errorRate",
            "expression": "round((sum(count4xx) + sum(count5xx))*100.0/sum(requestCount), 2)"
          },
          "avgResponseTime"
        ],
        "limit": "10",
        "orderBy": {
          "name": "requestCount",
          "order": "desc"
        },
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    },
    {
      "title": "Top 10 exceptions",
      "width": 4,
      "type": "table",
      "columns": [
        {
          "name": "exceptionClass",
          "format": "template",
          "template": "<a target='_blank' href='/web/metrics/exception-metrics/?appName={appName}&exceptionClass={exceptionClass}&interval=c:{interval}'>{exceptionClass}</a>"
        },
        {
          "name": "eventCount",
          "title": "exceptionCount"
        }
      ],
      "query": {
        "dataSource": "exception-metrics",
        "type": "groupBy",
        "fields": [
          "appName",
          "exceptionClass",
          "eventCount"
        ],
        "limit": 10,
        "orderBy": {
          "name": "eventCount",
          "order": "desc"
        },
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    }
  ]
}