{
  "name": "mongodb-metrics",
  "title": "MongoDb",
  "folder": "metrics",
  "filter": {
    "selectors": [
      {
        "type": "datasource",
        "name": "mongodb-metrics",
        "fields": [
          "appName",
          "instanceName",
          "server",
          "database",
          "collection",
          "command"
        ]
      }
    ]
  },
  "charts": [
    {
      "title": "Commands",
      "width": 4,
      "type": "line",
      "columns": [
        "tps",
        {
          "name": "totalCount",
          "yAxis": 1
        }
      ],
      "query": {
        "type": "timeseries",
        "dataSource": "mongodb-metrics",
        "fields": [
          "tps",
          "totalCount"
        ]
      }
    },
    {
      "title": "Time",
      "width": 4,
      "type": "line",
      "yAxis": [
        {
          "format": "nanoFormatter"
        }
      ],
      "columns": [
        "avgResponseTime",
        "minResponseTime",
        "maxResponseTime"
      ],
      "query": {
        "type": "timeseries",
        "dataSource": "mongodb-metrics",
        "fields": [
          "avgResponseTime",
          "minResponseTime",
          "maxResponseTime"
        ]
      }
    },
    {
      "title": "IO",
      "width": 4,
      "type": "line",
      "yAxis": [
        {
          "format": "byte_rate"
        },
        {
          "format": "binary_byte"
        }
      ],
      "columns": [
        {
          "name": "requestByteRate",
          "yAxis": 0
        },
        {
          "name": "responseByteRate",
          "yAxis": 0
        },
        {
          "name": "requestBytes",
          "yAxis": 1
        },
        {
          "name": "responseBytes",
          "yAxis": 1
        }
      ],
      "query": {
        "type": "timeseries",
        "dataSource": "mongodb-metrics",
        "fields": [
          "requestByteRate",
          "responseByteRate",
          "requestBytes",
          "responseBytes"
        ]
      }
    }
  ]
}
