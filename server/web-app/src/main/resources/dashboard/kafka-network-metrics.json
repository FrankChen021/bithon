{
  "name": "kafka-network-metrics",
  "title": "Kafka Network",
  "folder": "metrics",
  "filter": {
    "selectors": [
      {
        "type": "datasource",
        "name": "kafka-network-metrics",
        "fields": [
          "appName",
          "instanceName",
          "type",
          "cluster",
          "nodeId",
          "groupId",
          "clientId",
          "exception"
        ]
      }
    ]
  },
  "charts": [
    {
      "title": "QPS",
      "width": 4,
      "type": "line",
      "columns": [
        "qps"
      ],
      "query": {
        "type": "timeseries",
        "dataSource": "kafka-network-metrics",
        "fields": [
          "type",
          "qps"
        ]
      }
    },
    {
      "title": "Latency",
      "width": 4,
      "type": "line",
      "yAxis": [
        {
          "format": "millisecond"
        }
      ],
      "columns": [
        "minResponseTime",
        "avgResponseTime",
        "maxResponseTime"
      ],
      "query": {
        "type": "timeseries",
        "dataSource": "kafka-network-metrics",
        "fields": [
          "minResponseTime",
          "avgResponseTime",
          "maxResponseTime"
        ]
      }
    }
  ]
}