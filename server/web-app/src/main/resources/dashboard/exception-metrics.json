{
  "title": "Exceptions",
  "charts": [
    {
      "dataSource": "exception-metrics",
      "title": "Exceptions",
      "width": 4,
      "type": "line",
      "yAxis": [
        {
          "format": "compact_number"
        }
      ],
      "columns": [
        {
          "name": "eventCount",
          "chartType": "line",
          "fill": false
        }
      ],
      "query": {
        "dataSource": "exception-metrics",
        "type": "timeseries",
        "fields": [
          "eventCount"
        ]
      }
    },
    {
      "dataSource": "exception-metrics",
      "title": "Exception List",
      "width": 4,
      "type":  "table",
      "columns": [
        {
          "name": "timestamp",
          "title": "Time",
          "format": "shortDateTime",
          "width": 150
        },
        {
          "name": "instanceName",
          "title": "Instance"
        },
        {
          "name": "thread",
          "title": "Thread",
          "width": 150
        },
        {
          "name": "traceId",
          "title": "Trace Id",
          "format": "template",
          "template": "<a target='_blank' href='/web/trace/detail?id={value}&type=trace'>{value}</a>"
        },
        {
          "name": "exceptionClass",
          "title": "Exception"
        },
        {
          "name": "message",
          "title": "Message"
        },
        {
          "name": "stack",
          "title": "Stack Trace",
          "format": "detail"
        }
      ],
      "pagination": [25, 50, 100],
      "query": {
        "dataSource": "exception-metrics",
        "type": "list",
        "fields": [
          "timestamp",
          "instanceName",
          "thread",
          "traceId",
          "exceptionClass",
          "message",
          "stack"
        ],
        "orderBy": {
          "name": "timestamp",
          "order": "desc"
        }
      }
    }
  ]
}
