{
  "title": "Exceptions",
  "charts": [
    {
      "dataSource": "exception-metrics",
      "title": "Exceptions",
      "width": 4,
      "yAxis": [
        {
          "format": "compact_number"
        }
      ],
      "metrics": [
        {
          "name": "eventCount",
          "chartType": "line",
          "fill": false
        }
      ]
    },
    {
      "dataSource": "exception-metrics",
      "title": "Exception List",
      "width": 4,
      "type":  "list",
      "columns": [
        {
          "field": "timestamp",
          "title": "Time",
          "format": "shortDateTime",
          "width": 150
        },
        {
          "field": "instanceName",
          "title": "Instance"
        },
        {
          "field": "thread",
          "title": "Thread",
          "width": 150
        },
        {
          "field": "traceId",
          "title": "Trace Id",
          "format": "template",
          "template": "<a target='_blank' href='/web/trace/detail?id={value}&type=trace'>{value}</a>"
        },
        {
          "field": "exceptionClass",
          "title": "Exception"
        },
        {
          "field": "message",
          "title": "Message"
        },
        {
          "field": "stack",
          "title": "Stack Trace",
          "format": "detail"
        }
      ]
    }
  ]
}
