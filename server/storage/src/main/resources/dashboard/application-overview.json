{
  "name": "application-overview",
  "folder": "metrics",
  "title": "Application Overview",
  "filter": {
    "selectors": [
      {
        "type": "datasource",
        "name": "jvm-metrics",
        "fields": [
          {
            "name": "appName",
            "width": 200,
            "allowClear": false
          }
        ]
      }
    ]
  },
  "charts": [
    {
      "title": "Avg Cpu Usage",
      "width": 1,
      "type": "stat",
      "link": "/dashboard/jvm-metrics",
      "query": {
        "dataSource": "jvm-metrics",
        "type": "groupBy",
        "fields": [
          {
            "name": "avgCpuUsage",
            "expression": "avg(processCpuLoad)"
          }
        ],
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    },
    {
      "title": "CPU Cores",
      "width": 1,
      "type": "stat",
      "link": "/dashboard/jvm-metrics",
      "query": {
        "dataSource": "jvm-metrics",
        "type": "groupBy",
        "fields": [
          {
            "name": "cpuCores",
            "expression": "avg(processors)"
          }
        ],
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    },
    {
      "title": "Instance",
      "width": 1,
      "type": "stat",
      "link": "/dashboard/jvm-metrics",
      "query": {
        "dataSource": "jvm-metrics",
        "type": "groupBy",
        "fields": [
          {
            "name": "instanceCount",
            "expression": "cardinality(instanceName)"
          }
        ],
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    },
    {
      "title": "Incoming HTTP Requests",
      "width": 1,
      "type": "stat",
      "link": "/dashboard/http-incoming-metrics",
      "query": {
        "dataSource": "http-incoming-metrics",
        "type": "groupBy",
        "fields": [
          {
            "name": "totalCount",
            "expression": "sum(totalCount)"
          }
        ],
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    },
    {
      "title": "Outgoing HTTP Requests",
      "width": 1,
      "type": "stat",
      "link": "/dashboard/http-outgoing-metrics",
      "query": {
        "dataSource": "http-outgoing-metrics",
        "type": "groupBy",
        "fields": [
          {
            "name": "totalCount",
            "expression": "sum(requestCount)"
          }
        ],
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    },
    {
      "title": "Exception",
      "width": 1,
      "type": "stat",
      "link": "/dashboard/exception-metrics",
      "query": {
        "dataSource": "exception-metrics",
        "type": "groupBy",
        "fields": [
          {
            "name": "totalCount",
            "expression": "sum(eventCount)"
          }
        ],
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    },
    {
      "title": "GRPC Client Request",
      "width": 1,
      "type": "stat",
      "link": "/dashboard/grpc-client-metrics",
      "query": {
        "dataSource": "grpc-client-metrics",
        "type": "groupBy",
        "fields": [
          {
            "name": "callCount",
            "expression": "sum(callCount)"
          }
        ],
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    },
    {
      "title": "Kafka Producers",
      "width": 1,
      "type": "stat",
      "link": "/dashboard/kafka-producer-metrics",
      "query": {
        "dataSource": "kafka-producer-metrics",
        "type": "groupBy",
        "fields": [
          {
            "name": "records",
            "expression": "sum(recordCount)"
          }
        ],
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    },
    {
      "title": "Kafka Consumption Byte Rate (Bps)",
      "width": 1,
      "type": "stat",
      "link": "/dashboard/kafka-consumer-metrics",
      "query": {
        "dataSource": "kafka-consumer-metrics",
        "type": "groupBy",
        "fields": [
          {
            "name": "consumedByteRate",
            "expression": "round(sum(consumedBytes) * 1.0/{interval}, 2)"
          }
        ],
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    },
    {
      "title": "Redis Requests",
      "width": 1,
      "type": "stat",
      "link": "/dashboard/redis-metrics",
      "query": {
        "dataSource": "redis-metrics",
        "type": "groupBy",
        "fields": [
          {
            "name": "totalCount",
            "expression": "sum(totalCount)"
          }
        ],
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    },
    {
      "title": "MongoDb Requests",
      "width": 1,
      "type": "stat",
      "link": "/dashboard/mongodb-metrics",
      "query": {
        "dataSource": "mongodb-metrics",
        "type": "groupBy",
        "fields": [
          {
            "name": "totalCount",
            "expression": "sum(totalCount)"
          }
        ],
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    },
    {
      "title": "SQLs",
      "width": 1,
      "type": "stat",
      "link": "/dashboard/sql-metrics",
      "query": {
        "dataSource": "sql-metrics",
        "type": "groupBy",
        "fields": [
          {
            "name": "totalCount",
            "expression": "sum(callCount)"
          }
        ],
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    },
    {
      "title": "ZooKeeper Client Requests",
      "width": 1,
      "type": "stat",
      "link": "/dashboard/zookeeper-client-metrics",
      "query": {
        "dataSource": "zookeeper-client-metrics",
        "type": "groupBy",
        "fields": [
          {
            "name": "totalCount",
            "expression": "sum(totalCount)"
          }
        ],
        "precondition": {
          "filters": [
            "appName"
          ]
        }
      }
    }
  ]
}