{
  "id": "kafka-network-metrics",
  "title": "Kafka Network",
  "filter": {
    "selectors": [
      {
        "type": "datasource",
        "name": "kafka-network-metrics",
        "fields": [
          { "name": "appName", "width": 200, "allowClear": false },
          "instanceName",
          "type",
          "cluster",
          "nodeId",
          "groupId",
          "clientId",
          "exception"
        ]
      }
    ]
  },
  "charts": [
    {
      "title": "QPS",
      "width": 4,
      "type": "line",
      "columns": ["qps"],
      "query": {
        "type": "timeseries",
        "dataSource": "kafka-network-metrics",
        "fields": [
          {
            "name": "qps",
            "expression": "round(sum(requestCount)/{interval}, 2)"
          }
        ],
        "groupBy": ["type"]
      }
    },
    {
      "title": "Latency",
      "width": 4,
      "type": "line",
      "yAxis": [
        {
          "format": "millisecond"
        }
      ],
      "columns": ["minResponseTime", "avgResponseTime", "maxResponseTime"],
      "query": {
        "type": "timeseries",
        "dataSource": "kafka-network-metrics",
        "fields": [
          {
            "name": "minResponseTime",
            "expression": "min(minResponseTime)"
          },
          {
            "name": "avgResponseTime",
            "expression": "round(sum(responseTime) * 1.0 /sum(requestCount),2)"
          },
          {
            "name": "maxResponseTime",
            "expression": "max(maxResponseTime)"
          }
        ]
      },
      "details": {
        "columns": [
          "cluster",
          "type",
          {
            "name": "minResponseTime",
            "format": "millisecond"
          },
          {
            "name": "avgResponseTime",
            "format": "millisecond"
          },
          {
            "name": "maxResponseTime",
            "format": "millisecond"
          }
        ],
        "query": {
          "type": "groupBy",
          "dataSource": "kafka-network-metrics",
          "fields": [
            {
              "name": "count",
              "expression": "count()"
            },
            {
              "name": "minResponseTime",
              "expression": "min(minResponseTime)"
            },
            {
              "name": "avgResponseTime",
              "expression": "round(sum(responseTime) * 1.0 /sum(requestCount),2)"
            },
            {
              "name": "maxResponseTime",
              "expression": "max(maxResponseTime)"
            }
          ],
          "groupBy": ["cluster", "type"],
          "orderBy": {
            "name": "avgResponseTime",
            "order": "desc"
          }
        }
      }
    }
  ]
}
