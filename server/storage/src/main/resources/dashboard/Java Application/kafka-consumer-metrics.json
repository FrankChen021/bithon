{
  "id": "kafka-consumer-metrics",
  "title": "Kafka Consumer",
  "filter": {
    "selectors": [
      {
        "type": "datasource",
        "name": "kafka-consumer-metrics",
        "fields": [
          {
            "name": "appName",
            "width": 200,
            "allowClear": false
          },
          "instanceName",
          "cluster",
          "topic",
          "partition",
          "groupId",
          "clientId"
        ]
      }
    ]
  },
  "charts": [
    {
      "title": "Consumed Records",
      "width": 4,
      "type": "line",
      "columns": [
        {
          "name": "consumedRecordsRate",
          "format": "rate"
        },
        {
          "name": "consumedRecords",
          "yAxis": 1
        }
      ],
      "query": {
        "type": "timeseries",
        "dataSource": "kafka-consumer-metrics",
        "fields": [
          {
            "name": "consumedRecordsRate",
            "expression": "round(sum(consumedRecords)/{interval}, 2)"
          },
          {
            "name": "consumedRecords",
            "expression": "sum(consumedRecords)"
          }
        ]
      },
      "details": {
        "columns": [
          "cluster",
          "topic",
          "groupId",
          "partition",
          {
            "name": "count",
            "format": "compact_number"
          },
          {
            "name": "consumedRecordsRate",
            "format": "rate"
          },
          {
            "name": "consumedRecords",
            "format": "compact_number"
          }
        ],
        "query": {
          "type": "groupBy",
          "dataSource": "kafka-consumer-metrics",
          "fields": [
            {
              "name": "count",
              "expression": "count()"
            },
            {
              "name": "consumedRecordsRate",
              "expression": "round(sum(consumedRecords)/{interval}, 2)"
            },
            {
              "name": "consumedRecords",
              "expression": "sum(consumedRecords)"
            }
          ],
          "groupBy": ["cluster", "topic", "groupId", "partition"],
          "orderBy": {
            "name": "consumedRecordsRate",
            "order": "desc"
          }
        },
        "tracing": {
          "mappings": {
            "cluster": "tags['net.peer']",
            "topic": "tags['messaging.kafka.topic']",
            "groupId": "tags['messaging.kafka.consumer.group']"
          },
          "filter": "name= 'kafka' AND kind = 'CONSUMER'"
        }
      }
    },
    {
      "title": "Consumed Bytes",
      "width": 4,
      "type": "line",
      "yAxis": [
        {
          "format": "byte_rate"
        },
        {
          "format": "binary_byte"
        }
      ],
      "columns": [
        "consumedBytesRate",
        {
          "name": "consumedBytes",
          "yAxis": 1
        }
      ],
      "query": {
        "type": "timeseries",
        "dataSource": "kafka-consumer-metrics",
        "fields": [
          {
            "name": "consumedBytesRate",
            "expression": "round(sum(consumedBytes)/{interval}, 2)"
          },
          {
            "name": "consumedBytes",
            "expression": "sum(consumedBytes)"
          }
        ]
      },
      "details": {
        "columns": [
          "cluster",
          "topic",
          "groupId",
          "partition",
          {
            "name": "count",
            "format": "compact_number"
          },
          {
            "name": "consumedBytesRate",
            "format": "rate"
          },
          {
            "name": "consumedBytes",
            "format": "binary_byte"
          }
        ],
        "query": {
          "type": "groupBy",
          "dataSource": "kafka-consumer-metrics",
          "fields": [
            {
              "name": "count",
              "expression": "count()"
            },
            {
              "name": "consumedBytesRate",
              "expression": "round(sum(consumedBytes)/{interval}, 2)"
            },
            {
              "name": "consumedBytes",
              "expression": "sum(consumedBytes)"
            }
          ],
          "groupBy": ["cluster", "topic", "groupId", "partition"],
          "orderBy": {
            "name": "consumedBytesRate",
            "order": "desc"
          }
        },
        "tracing": {
          "mappings": {
            "cluster": "tags['net.peer']",
            "topic": "tags['messaging.kafka.topic']",
            "groupId": "tags['messaging.kafka.consumer.group']"
          },
          "filter": "name= 'kafka' AND kind = 'CONSUMER'"
        }
      }
    }
  ]
}
