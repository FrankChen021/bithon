{
  "id": "zookeeper-client-metrics",
  "title": "ZooKeeper Client",
  "filter": {
    "selectors": [
      {
        "type": "datasource",
        "name": "zookeeper-client-metrics",
        "fields": [
          { "name": "appName", "width": 200, "allowClear": false },
          "instanceName",
          "operation",
          "status",
          "server"
        ]
      }
    ]
  },
  "charts": [
    {
      "title": "QPS",
      "width": 4,
      "type": "line",
      "columns": [
        "qps",
        {
          "name": "totalCount",
          "yAxis": 1
        }
      ],
      "query": {
        "type": "timeseries",
        "dataSource": "zookeeper-client-metrics",
        "fields": [
          {
            "name": "qps",
            "expression": "round(sum(totalCount)/{interval}, 2)"
          },
          {
            "name": "totalCount",
            "expression": "sum(totalCount)"
          }
        ]
      },
      "details": {
        "columns": ["operation", "status", "server", "totalCount", "qps"],
        "query": {
          "dataSource": "zookeeper-client-metrics",
          "type": "groupBy",
          "fields": [
            {
              "name": "qps",
              "expression": "round(sum(totalCount)/{interval}, 2)"
            },
            {
              "name": "totalCount",
              "expression": "sum(totalCount)"
            }
          ],
          "groupBy": ["operation", "status", "server"],
          "orderBy": {
            "name": "totalCount",
            "order": "desc"
          },
          "limit": 15
        }
      }
    },
    {
      "title": "Response Time",
      "width": 4,
      "type": "line",
      "yAxis": [
        {
          "format": "nanoFormatter"
        }
      ],
      "columns": ["minResponseTime", "avgResponseTime", "maxResponseTime"],
      "query": {
        "dataSource": "zookeeper-client-metrics",
        "type": "timeseries",
        "fields": [
          {
            "name": "minResponseTime",
            "expression": "min(minResponseTime)"
          },
          {
            "name": "avgResponseTime",
            "expression": "round(sum(responseTime) * 1.0 /sum(totalCount),2)"
          },
          {
            "name": "maxResponseTime",
            "expression": "max(maxResponseTime)"
          }
        ]
      },
      "details": {
        "columns": [
          "operation",
          "status",
          "server",
          "totalCount",
          {
            "name": "minResponseTime",
            "format": "nanoFormatter"
          },
          {
            "name": "avgResponseTime",
            "format": "nanoFormatter"
          },
          {
            "name": "maxResponseTime",
            "format": "nanoFormatter"
          }
        ],
        "query": {
          "dataSource": "zookeeper-client-metrics",
          "type": "groupBy",
          "fields": [
            {
              "name": "totalCount",
              "expression": "sum(totalCount)"
            },
            {
              "name": "minResponseTime",
              "expression": "min(minResponseTime)"
            },
            {
              "name": "avgResponseTime",
              "expression": "round(sum(responseTime) * 1.0 /sum(totalCount),2)"
            },
            {
              "name": "maxResponseTime",
              "expression": "max(maxResponseTime)"
            }
          ],
          "groupBy": ["operation", "status", "server"],
          "orderBy": {
            "name": "avgResponseTime",
            "order": "desc"
          },
          "limit": 15
        }
      }
    },
    {
      "title": "IO",
      "width": 4,
      "type": "line",
      "columns": ["bytesSent", "bytesReceived"],
      "yAxis": [
        {
          "format": "binary_byte"
        }
      ],
      "query": {
        "type": "timeseries",
        "dataSource": "zookeeper-client-metrics",
        "fields": [
          {
            "name": "bytesSent",
            "expression": "sum(bytesSent)"
          },
          {
            "name": "bytesReceived",
            "expression": "sum(bytesReceived)"
          }
        ]
      },
      "details": {
        "columns": ["operation", "status", "server", "totalCount", "bytesSent", "bytesReceived"],
        "query": {
          "dataSource": "zookeeper-client-metrics",
          "type": "groupBy",
          "fields": [
            {
              "name": "totalCount",
              "expression": "sum(totalCount)"
            },
            {
              "name": "bytesSent",
              "expression": "sum(bytesSent)"
            },
            {
              "name": "bytesReceived",
              "expression": "sum(bytesReceived)"
            }
          ],
          "groupBy": ["operation", "status", "server"],
          "orderBy": {
            "name": "totalCount",
            "order": "desc"
          },
          "limit": 15
        }
      }
    }
  ]
}
