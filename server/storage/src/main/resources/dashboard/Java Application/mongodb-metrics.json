{
  "id": "mongodb-metrics",
  "title": "MongoDb",
  "filter": {
    "selectors": [
      {
        "type": "datasource",
        "name": "mongodb-metrics",
        "fields": [
          { "name": "appName", "width": 200, "allowClear": false },
          "instanceName",
          "server",
          "database",
          "collection",
          "command"
        ]
      }
    ]
  },
  "charts": [
    {
      "title": "Commands",
      "width": 4,
      "type": "line",
      "columns": [
        "tps",
        {
          "name": "totalCount",
          "yAxis": 1
        }
      ],
      "query": {
        "type": "timeseries",
        "dataSource": "mongodb-metrics",
        "fields": [
          {
            "name": "tps",
            "expression": "round(sum(totalCount)/{interval}, 2)"
          },
          {
            "name": "totalCount",
            "expression": "sum(totalCount)"
          }
        ]
      }
    },
    {
      "title": "Time",
      "width": 4,
      "type": "line",
      "yAxis": [
        {
          "format": "nanoFormatter"
        }
      ],
      "columns": ["avgResponseTime", "minResponseTime", "maxResponseTime"],
      "query": {
        "type": "timeseries",
        "dataSource": "mongodb-metrics",
        "fields": [
          {
            "name": "avgResponseTime",
            "expression": "round(sum(responseTime) * 1.0 /sum(totalCount),2)"
          },
          {
            "name": "minResponseTime",
            "expression": "min(minResponseTime)"
          },
          {
            "name": "maxResponseTime",
            "expression": "max(maxResponseTime)"
          }
        ]
      }
    },
    {
      "title": "IO",
      "width": 4,
      "type": "line",
      "yAxis": [
        {
          "format": "byte_rate"
        },
        {
          "format": "binary_byte"
        }
      ],
      "columns": [
        {
          "name": "requestByteRate",
          "yAxis": 0
        },
        {
          "name": "responseByteRate",
          "yAxis": 0
        },
        {
          "name": "requestBytes",
          "yAxis": 1
        },
        {
          "name": "responseBytes",
          "yAxis": 1
        }
      ],
      "query": {
        "type": "timeseries",
        "dataSource": "mongodb-metrics",
        "fields": [
          {
            "name": "requestByteRate",
            "expression": "round(sum(requestBytes)/{interval}, 2)"
          },
          {
            "name": "responseByteRate",
            "expression": "round(sum(responseBytes)/{interval}, 2)"
          },
          {
            "name": "requestBytes",
            "expression": "sum(requestBytes)"
          },
          {
            "name": "responseBytes",
            "expression": "sum(responseBytes)"
          }
        ]
      }
    }
  ]
}
