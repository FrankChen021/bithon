{
  "name": "exception-metrics",
  "title": "Exceptions",
  "folder": "metrics",
  "filter": {
    "selectors": [
      {
        "type": "datasource",
        "name": "exception-metrics",
        "fields": [
          {"name": "appName", "width": 200, "allowClear": false},
          "instanceName",
          "exceptionClass"
        ]
      }
    ],
    "showFilterInput": true
  },
  "charts": [
    {
      "title": "Exceptions",
      "width": 4,
      "type": "line",
      "zoomOnTime": true,
      "yAxis": [
        {
          "format": "compact_number"
        }
      ],
      "columns": [
        {
          "name": "eventCount",
          "chartType": "bar"
        }
      ],
      "query": {
        "dataSource": "exception-metrics",
        "type": "timeseries",
        "fields": [
          "eventCount"
        ],
        "bucketCount": 30
      }
    },
    {
      "title": "Top 5 instances",
      "width": 2,
      "type": "table",
      "columns": [
        "instanceName",
        {"name": "eventCount", "title": "exceptionCount"}
      ],
      "query": {
        "dataSource": "exception-metrics",
        "type": "groupBy",
        "fields": [
          "eventCount"
        ],
        "groupBy": ["instanceName"],
        "limit": 5,
        "orderBy": {
          "name": "eventCount",
          "order": "desc"
        }
      }
    },
    {
      "title": "Top 5 Exceptions",
      "width": 2,
      "type": "table",
      "columns": [
        "exceptionClass",
        {"name": "eventCount", "title": "exceptionCount"}
      ],
      "query": {
        "dataSource": "exception-metrics",
        "type": "groupBy",
        "fields": [
          "eventCount"
        ],
        "groupBy": ["exceptionClass"],
        "limit": 5,
        "orderBy": {
          "name": "eventCount",
          "order": "desc"
        }
      }
    },
    {
      "title": "Exception List",
      "width": 4,
      "type": "table",
      "showColumns": true,
      "columns": [
        {
          "name": "timestamp",
          "format": "time",
          "template": "MM-dd hh:mm:ss.S",
          "width": 150
        },
        "instanceName",
        "thread",
        {
          "name": "traceId",
          "format": "template",
          "template": "<a target='_blank' href='/web/trace/detail?_sidebar=collapsed&type=trace&id={traceId}'>{traceId}</a>"
        },
        "exceptionClass",
        "message",
        {
          "name": "stack",
          "format": "detail"
        }
      ],
      "pagination": [
        50,
        100,
        500
      ],
      "query": {
        "dataSource": "exception-metrics",
        "type": "list",
        "fields": [
          "timestamp",
          "instanceName",
          "thread",
          "traceId",
          "exceptionClass",
          "message",
          "stack"
        ],
        "orderBy": {
          "name": "timestamp",
          "order": "asc"
        }
      }
    }
  ]
}
