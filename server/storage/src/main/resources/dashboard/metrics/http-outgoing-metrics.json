{
  "id": "http-outgoing-metrics",
  "title": "HTTP Outgoing",
  "filter": {
    "selectors": [
      {
        "type": "datasource",
        "name": "http-outgoing-metrics",
        "fields": [
          {
            "name": "appName",
            "width": 200,
            "allowClear": false
          },
          "instanceName",
          "targetHostPort",
          "method",
          "path",
          "statusCode"
        ]
      }
    ],
    "showFilterInput": true
  },
  "charts": [
    {
      "title": "Top 10 Outgoing HTTP Requests",
      "width": 4,
      "type": "table",
      "columns": [
        "path",
        { "name": "qps", "sortable": true },
        {
          "name": "requestCount",
          "format": "compact_number",
          "sortable": true
        },
        {
          "name": "errorCount",
          "format": "compact_number",
          "sortable": true
        },
        {
          "name": "errorRate",
          "format": "percentage",
          "sortable": true
        },
        {
          "name": "minResponseTime",
          "format": "nanosecond",
          "sortable": true
        },
        {
          "name": "avgResponseTime",
          "format": "nanosecond",
          "sortable": true
        },
        {
          "name": "maxResponseTime",
          "format": "nanosecond",
          "sortable": true
        }
      ],
      "query": {
        "dataSource": "http-outgoing-metrics",
        "type": "groupBy",
        "fields": [
          "qps",
          "requestCount",
          {
            "name": "errorCount",
            "expression": "sum(count4xx) + sum(count5xx)"
          },
          {
            "name": "errorRate",
            "expression": "round((sum(count4xx) + sum(count5xx))*100.0/sum(requestCount), 2)"
          },
          "avgResponseTime"
        ],
        "groupBy": ["appName", "path"],
        "limit": 10,
        "orderBy": {
          "name": "requestCount",
          "order": "desc"
        },
        "precondition": {
          "filters": ["appName"]
        }
      }
    },
    {
      "title": "QPS",
      "width": 4,
      "type": "line",
      "columns": [
        "qps",
        {
          "name": "requestCount",
          "yAxis": 1
        }
      ],
      "query": {
        "dataSource": "http-outgoing-metrics",
        "fields": ["qps", "requestCount"]
      },
      "details": {
        "type": "groupBy",
        "columns": ["targetHostPort", "method", "path", "statusCode", "qps", "requestCount"],
        "query": {
          "type": "timeseries",
          "dataSource": "http-outgoing-metrics",
          "fields": ["qps", "requestCount"],
          "groupBy": ["targetHostPort", "method", "path", "statusCode"],
          "orderBy": {
            "name": "qps",
            "order": "desc"
          },
          "limit": 15
        },
        "tracing": {
          "mappings": {
            "targetHostPort": "tags['net.peer']",
            "method": "tags['http.method']",
            "path": "url",
            "statusCode": "status"
          },
          "filter": "name= 'http-client' AND kind = 'CLIENT'"
        }
      }
    },
    {
      "title": "Response Time",
      "width": 4,
      "type": "line",
      "columns": [
        {
          "name": "minResponseTime",
          "format": "nanosecond"
        },
        {
          "name": "avgResponseTime",
          "format": "nanosecond"
        },
        {
          "name": "maxResponseTime",
          "format": "nanosecond"
        }
      ],
      "query": {
        "type": "timeseries",
        "dataSource": "http-outgoing-metrics",
        "fields": ["minResponseTime", "avgResponseTime", "maxResponseTime"]
      },
      "details": {
        "columns": [
          "targetHostPort",
          "method",
          "path",
          "statusCode",
          "requestCount",
          {
            "name": "minResponseTime",
            "title": "min",
            "format": "nanosecond"
          },
          {
            "name": "avgResponseTime",
            "title": "avg",
            "format": "nanosecond"
          },
          {
            "name": "maxResponseTime",
            "title": "max",
            "format": "nanosecond"
          }
        ],
        "query": {
          "type": "groupBy",
          "fields": ["requestCount", "minResponseTime", "avgResponseTime", "maxResponseTime"],
          "groupBy": ["targetHostPort", "method", "path", "statusCode"],
          "orderBy": {
            "name": "avgResponseTime",
            "order": "desc"
          },
          "limit": 15
        },
        "tracing": {
          "mappings": {
            "targetHostPort": "tags['net.peer']",
            "method": "tags['http.method']",
            "path": "url",
            "statusCode": "status"
          },
          "filter": "name= 'http-client' AND kind = 'CLIENT'"
        }
      }
    },
    {
      "title": "Errors",
      "width": 4,
      "type": "line",
      "columns": ["count4xx", "count5xx", "countException"],
      "query": {
        "dataSource": "http-outgoing-metrics",
        "type": "timeseries",
        "fields": ["count4xx", "count5xx", "countException"]
      },
      "details": {
        "columns": ["targetHostPort", "method", "path", "statusCode", "requestCount"],
        "query": {
          "type": "groupBy",
          "fields": ["statusCode", "requestCount"],
          "groupBy": ["targetHostPort", "method", "path"],
          "filter": "statusCode >= '400'",
          "orderBy": {
            "name": "requestCount",
            "order": "desc"
          },
          "limit": 15
        },
        "tracing": {
          "mappings": {
            "targetHostPort": "tags['net.peer']",
            "method": "tags['http.method']",
            "path": "url",
            "statusCode": "status"
          },
          "filter": "name= 'http-client' AND kind = 'CLIENT'"
        }
      }
    },
    {
      "title": "IO",
      "width": 4,
      "type": "line",
      "yAxis": [
        {
          "format": "byte_rate"
        },
        {
          "format": "binary_byte"
        }
      ],
      "columns": [
        "requestByteRate",
        "responseByteRate",
        {
          "name": "requestBytes",
          "yAxis": 1
        },
        {
          "name": "responseBytes",
          "yAxis": 1
        }
      ],
      "query": {
        "dataSource": "http-outgoing-metrics",
        "type": "timeseries",
        "fields": ["requestByteRate", "responseByteRate", "requestBytes", "responseBytes"]
      },
      "details": {
        "columns": [
          "targetHostPort",
          "method",
          "path",
          "requestCount",
          "statusCode",
          {
            "name": "requestByteRate",
            "format": "byte_rate"
          },
          {
            "name": "responseByteRate",
            "format": "byte_rate"
          }
        ],
        "query": {
          "type": "groupBy",
          "fields": ["requestCount", "requestByteRate", "responseByteRate"],
          "groupBy": ["targetHostPort", "method", "path", "statusCode"],
          "orderBy": {
            "name": "requestByteRate",
            "order": "desc"
          },
          "limit": 15
        }
      }
    }
  ]
}
