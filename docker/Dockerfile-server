ARG AGENT

FROM maven:3.8.1-jdk-8-slim as builder

ARG BUILD_FROM_SOURCE="true"

RUN export DEBIAN_FRONTEND=noninteractive \
    && apt-get -qq update \
    && apt-get -qq -y install --no-install-recommends git

COPY . /src

# Build jOOQ
WORKDIR /src/server/jOOQ
RUN --mount=type=cache,target=/root/.m2 if [ "$BUILD_FROM_SOURCE" = "true" ]; then \
      mvn clean install -DskipTests \
      ; fi

# Build Server
WORKDIR /src
RUN --mount=type=cache,target=/root/.m2 if [ "$BUILD_FROM_SOURCE" = "true" ]; then \
      mvn -pl server/server-starter -am \
      clean package \
      -T 1C \
      -DskipTests \
    ; fi

FROM amd64/busybox:1.30.0-glibc as busybox
FROM bithon/agent:$AGENT

COPY --from=builder /src/server/server-starter/target/bithon-server-starter.jar /opt/bithon-server-starter.jar
#COPY server/server-starter/target/bithon-server-starter.jar /opt/bithon-server-starter.jar

COPY --from=busybox /bin/busybox /busybox/busybox
RUN ["/busybox/busybox", "--install", "/bin"]

ENTRYPOINT java -javaagent:/opt/agent-distribution/agent-main.jar -Dbithon.application.name=bithon-server -Dbithon.application.env=dev -jar /opt/bithon-server-starter.jar
